<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>onebusaway-nyc-vehicle-tracking-webapp</display-name>

	<context-param>
		<param-name>defaultHtmlEscape</param-name>
		<param-value>true</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:org/onebusaway/nyc/vehicle_tracking/application-context*.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>post-servlet</servlet-name>
		<servlet-class>org.onebusaway.nyc.vehicle_tracking.webapp.servlets.PostServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>post-servlet</servlet-name>
		<url-pattern>/post_servlet</url-pattern>
	</servlet-mapping>
</web-app>
