<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags"
	xmlns:wiki="/oba-wiki-tags">
<jsp:directive.page contentType="text/html" />
<head>
<title>Mobile Interface</title>

<meta name="viewport" content="width = 350"/>

<style type="text/css">
BODY, HTML {
	font-family: Helvetica, Arial, sans-serif;
}

DIV, FORM, P, UL, LI {
	padding: 0px;
	margin: 0px;
}

FORM {
	padding-top: 5px;
	padding-bottom: 5px;
}

INPUT.q {
	width: 150px;
}

INPUT.s {
	margin-left: 5px;
	width: 40px;
}

DIV {
	padding-bottom: 15px;
}

P.small {
	font-size: 70%;
}

LI {
	list-style-type: none;
}
</style>
</head>

<body>

<div>
<p>Search for:</p>

<form action="mobile.action">
<input type="text" name="q" class="q" value="${q}"/>
<input type="submit" class="s" value="Go" />
</form>

<p class="small">TIP: Enter an intersection, bus route, or bus stop number.</p>
</div>

<s:if test="%{searchResults.size==0}">
<c:if test="${empty #parameters.q}">
	<div>
		<p>Example searches:</p>
		<ul>
		<li><a href="mobile.action?q=Atlantic%20Ave%20and%20Hoyt%20St">Atlantic Ave and Hoyt St</a></li>
		<li><a href="mobile.action?q=305394">305394</a></li>
		<li><a href="mobile.action?q=B63">B63</a></li>
		</ul>
	</div>
</c:if>
<s:else>
	<div>
		<p>
		No results found.
		</p>
	</div>
</s:else>
</s:if>

<s:iterator value="searchResults">
<s:if test="%{type.equals('stop')}">
	<div>
		<p>
		<strong><s:property value="name" /></strong><br/>

		<s:iterator value="routesAvailable">
			<a href="mobile.action?q=${routeId}"><s:property value="headsign" /></a><br />
			<s:iterator value="distanceAway">
				<s:property value="presentableDistance" /><br />
			</s:iterator>
		</s:iterator>
		</p>
	</div>
</s:if>
<s:elseif test="%{type.equals('route')}">
	<div>
		<p>
		<strong><s:property value="tripHeadsign" /></strong><br />
		<ul>
			<s:iterator value="stopItems">
			<li>
				<a title="${name}" href="mobile.action?q=${id}"><s:property value="name" /></a>
				<s:property value="presentableDistances" />
			</li>
			</s:iterator>
		</ul>
		</p>
	</div>
</s:elseif>
</s:iterator>

</body>
</html>
