<?xml version="1.0" encoding="UTF-8"?>
    <!-- RefineViewWidget.ui.xml -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:my='urn:import:org.onebusaway.webapp.gwt.where_library.view'>

    <ui:style type="org.onebusaway.nyc.webapp.gwt.map_view_app.MapViewCssResource">

        .searchExample {
        color:gray;
        font-size:75%;
        margin-top:0.25em
        }

        .resultsPanel {
        padding-top: 1em;
        padding-left: 1em;
        padding-right: 1em;
        overflow:auto;
        }

        .searchPanel {
        padding-top: 1.5em;
        }

        .linksPanel {
        position:
        relative;
        top: -1em;
        margin-right: 0.5em;
        text-align: right;
        }

        .mapPanel {
        height: 100%;
        width: 100%;
        }

        .resultList {
        margin-top: 1em;
        }

        .resultListHeader {
        font-weight: bold;
        }

        .resultListWarning {
        color: red;
        }

        .resultListPrimary {
        font-size: 1.2em;
        margin-bottom: 3em;
        }

        .resultListAdditional .resultListEntry {
        margin-left:0.5em;
        }

        .resultListEntry {
        margin-top: 1em;
        }

        .resultListEntryName {

        }

        .resultListEntryDescription {
        margin-top: 0.3em;
        font-size: 0.8em;
        }

        .resultListMoreInfoLink {
        font-size: 0.8em;
        margin-top: 1.5em;
        margin-left:
        0.625em;
        }

        .resultListClear a {
        font-size: 0.8em;
        color: red;
        }
 
    </ui:style>

    <g:DockLayoutPanel unit='EM'>

        <g:west size='18'>
            <g:FlowPanel>
                <g:FlowPanel addStyleNames="{style.searchPanel}">
                    <g:Label>Search for stops:</g:Label>
                    <g:FormPanel ui:field="_searchFormPanel">
                        <g:FlowPanel>
                            <g:TextBox ui:field="_searchTextBox" visibleLength="55" name="q" />
                            <g:SubmitButton>Search</g:SubmitButton>
                        </g:FlowPanel>
                    </g:FormPanel>
                    <g:Label addStyleNames="{style.searchExample}">By address (ex. "3rd and pike") or route number (ex. "44" or "71").
                    </g:Label>
                </g:FlowPanel>
                <g:FlowPanel ui:field="_resultsPanel" addStyleNames="{style.resultsPanel}" />
            </g:FlowPanel>
        </g:west>

        <g:center>
            <my:MapWidgetComposite ui:field="_mapPanel" />
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>